{
  "name": "playwright-testrail-helper",
  "version": "1.4.0",
  "description": "Internal TypeScript library for TestRail integration with Playwright test automation",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "lint": "npx @biomejs/biome check --write",
    "lint:ci": "npx @biomejs/biome ci",
    "format": "npx @biomejs/biome format --write .",
    "format:check": "npx @biomejs/biome format .",
    "check": "npx @biomejs/biome check .",
    "fix": "npx @biomejs/biome check --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",

    "dev": "npm run build:watch"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dayjs": "^1.11.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "lefthook": "^1.5.0",
    "msw": "^2.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": ["dist/", "README.md"]
}
