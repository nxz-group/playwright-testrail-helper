{
  "name": "playwright-testrail-helper",
  "version": "1.4.3",
  "description": "Internal TypeScript library for TestRail integration with Playwright test automation",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "default": "./dist/core.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "lint": "npx @biomejs/biome check --write",
    "lint:ci": "npx @biomejs/biome ci",
    "format": "npx @biomejs/biome format --write .",
    "format:check": "npx @biomejs/biome format .",
    "check": "npx @biomejs/biome check .",
    "fix": "npx @biomejs/biome check --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "npm run build:watch"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "jest": "^30.1.3",
    "lefthook": "^1.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.55.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md"
  ]
}
