{
  "name": "playwright-testrail-helper",
  "version": "1.3.2",
  "description": "Internal TypeScript library for TestRail integration with Playwright test automation",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "lint": "npx @biomejs/biome check --write",
    "lint:ci": "npx @biomejs/biome ci",
    "format": "npx @biomejs/biome format --write .",
    "format:check": "npx @biomejs/biome format .",
    "check": "npx @biomejs/biome check .",
    "fix": "npx @biomejs/biome check --write .",
    "test": "echo \"No tests specified\" && exit 0",
    "test:features": "npx ts-node scripts/test-enhanced-features.ts",
    "dev": "npm run build:watch"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dayjs": "^1.11.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.0",
    "@types/node": "^20.0.0",
    "lefthook": "^1.5.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
