{
  "name": "playwright-testrail-helper",
  "version": "1.2.2",
  "description": "A TypeScript library for seamless TestRail integration with Playwright test automation, featuring automated failure capture and enhanced result comments",
  "keywords": [
    "playwright",
    "testrail",
    "test-automation",
    "testing",
    "typescript",
    "test-reporting",
    "failure-capture",
    "enhanced-comments",
    "error-reporting",
    "nxz-group",
    "qackskills"
  ],
  "homepage": "https://github.com/nxz-group/playwright-testrail-helper#readme",
  "bugs": {
    "url": "https://github.com/nxz-group/playwright-testrail-helper/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nxz-group/playwright-testrail-helper.git"
  },
  "license": "MIT",
  "author": "Qackskills (NXZ-GROUP)",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "ENVIRONMENT_VARIABLES.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "lint": "npx @biomejs/biome check --write",
    "lint:ci": "npx @biomejs/biome ci",
    "format": "npx @biomejs/biome format --write .",
    "format:check": "npx @biomejs/biome format .",
    "check": "npx @biomejs/biome check .",
    "fix": "npx @biomejs/biome check --write .",
    "test": "echo \"No tests specified\" && exit 0",
    "test:features": "npx ts-node scripts/test-enhanced-features.ts",
    "dev": "npm run build:watch"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dayjs": "^1.11.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.0",
    "@types/node": "^20.0.0",
    "lefthook": "^1.5.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
